view {
    color: var(--themeColor);
}

page {
    background-color: #ededed;
    width: 100%;
}

.container{
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
}

.search-input {
    /* 固定 */
    position: fixed;
    display: flex;
    justify-content:  center;
    align-items: center;
    /* 固定在顶部 */
    top: 0;
    width: 100%;
    height: 100rpx;
    background-color: #ffffff;
    /* 这样就不会被压住了 */
    z-index: 100;
}

/* 搜索框样式 */
.search-input-in {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 70rpx;
    width: 96%;
    border-radius: 40rpx;
    border: 1rpx solid #ededed;
    margin-left: auto;
    margin-right: auto;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    font-size: 38rpx;
    background-color: #ededed;


    font-size:28rpx;color:#666666
}

/* 首页的轮播图 */
.index-swiper {
    margin-top: 100rpx;
}

.idnex-swiper-img {
    width: 100%;
}

/* 首页图标块 */
.icon-chunk {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    background-color: #fff;
    height: 400rpx;
    width: 100%;
}

/* 首页图标块的图片 */
.icon-item-img {
    width: 150rpx;
}

/* 图标块的字体 */
.icon-item-text {
    display: flex;
    justify-content: center;
    align-items: center;
    color: #666666;
    margin-bottom: 30rpx;
}


/* 视频推荐标题 */
.index-re-title {
    margin-top: 20rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #ebebeb;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    width: 100%;
}
.index-re-title>view{
    font-size: 32rpx;
    color: #666;
    font-weight: bold;
    margin-left: 10rpx;
    margin-right: 10rpx;
}
/* 首页商品容器 */
.index-produce-container {
    background-color: #fff;
    width: 100%;
    display: flex;
    justify-content: center;
}

/* 推荐商品中的左边容器 */
.produce-container-left {
    display: flex;
    flex-direction: column;
}

.produce-container-right {
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
}

/* 首页商品项 */
.index-produce-item {
    margin-top: 30rpx;
    margin-bottom: 30rpx;
    width: 340rpx;
    height: 500rpx;
    /* background-color: #666666; */
    border: #ebebeb solid 1rpx;
}

/* 商品的图片 */
.produce-item-img>image {
    width: 338rpx;
    /* border-top-left-radius: 30rpx;
    border-top-right-radius: 30rpx; */
}

/* 商品标题 */
.produce-item-title {
    color: #666666;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    height: 40rpx;

    font-size: 30rpx;
    margin-left: 20rpx;
    font-weight: bold;
}

.produce-item-brief {
    color: #666666;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    font-size: 20rpx;
    margin-left: 20rpx;
}

/* 商品价格 */
.produce-item-price {
    position: relative;
    font-size: 35rpx;
    color: red;
    margin-left: 20rpx;
    margin-top: 15rpx;

}

.produce-item-sales{
    position: absolute;
    top: 18rpx;
    right: 30rpx    ;
    font-size: 20rpx;
    color: #666;
}


/* 最底部文字 */
.bottom-text {
    display: flex;
    justify-content: center;
    position: relative;
    margin-top: 100rpx;
    bottom: 30rpx;
    color: #666666;
}