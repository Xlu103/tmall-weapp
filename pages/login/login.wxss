 page {
   width: 100%;
   height: 100%;
   background-color: #f4f4f4;
 }

 .container {
   width: 100%;
   height: 100%;
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center;
 }

 .login-nav {
   height: 300rpx;
   width: 100%;
   display: flex;
   flex-direction: column;
   justify-content: space-evenly;
   align-items: center;
 }

 .login-img {
   width: 200rpx;
   height: 200rpx;
 }

 .login-nav-view {
   display: flex;
   justify-content: center;
   align-items: center;
   width: 500rpx;
   height: 100rpx;
 }

 .login-nav-wx {

   background-color: #b4282d;
   color: #f4f4f4;
 }

 .login-nav-email {
   background-color: #f4f4f4;
   border: 1rpx solid #b4282d;
   color: #b4282d;
 }